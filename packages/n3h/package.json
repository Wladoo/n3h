{
  "name": "n3h",
  "version": "0.0.1",
  "description": "nodejs holochain networking library with swapable / configurable modules",
  "main": "lib/index.js",
  "scripts": {
    "lint": "standard --fix 'lib/**/*.js' 'bin/**/*.js'",
    "mocha": "mocha 'lib/**/*.test.js' 'bin/**/*.test.js'",
    "nyc": "nyc npm run mocha",
    "test": "npm run lint && npm run nyc",
    "show-coverage": "node -e \"require('opn')('coverage/lcov-report/index.html')\""
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "opn": "^5.3.0",
    "sinon": "^6.1.4",
    "standard": "^11.0.1"
  },
  "dependencies": {
    "n3h-ipc": "^0.0.1",
    "n3h-common": "^0.0.1",
    "n3h-mod-message-libp2p": "^0.0.1",
    "n3h-mod-nv-persist-sqlite3": "^0.0.1",
    "n3h-mod-persist-cache-lru": "^0.0.1",
    "peer-id": "^0.11.0",
    "peer-info": "^0.14.1",
    "test-suite-executor": "^0.0.1"
  },
  "standard": {
    "env": {
      "mocha": true
    }
  },
  "nyc": {
    "check-coverage": false,
    "per-file": false,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "all": true,
    "include": [
      "./lib/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  }
}
