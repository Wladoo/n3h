{
  "name": "@holochain/n3h",
  "version": "0.0.1",
  "description": "nodejs holochain networking library with swapable / configurable modules",
  "main": "lib/exe.js",
  "scripts": {
    "lint": "standard --fix 'lib/**/*.js' 'bin/**/*.js'",
    "mocha": "mocha lib/**/*.test.js bin/**/*.test.js",
    "nyc": "nyc npm run mocha",
    "test": "npm run lint && npm run nyc",
    "build": "electron-builder",
    "show-coverage": "node -e \"require('opn')('coverage/lcov-report/index.html')\""
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "opn": "^5.4.0",
    "sinon": "^7.1.1",
    "standard": "^12.0.1",
    "tmp": "0.0.33",
    "electron": "^4.0.6",
    "electron-builder": "^20.38.5"
  },
  "dependencies": {
    "@holochain/hackmode": "^0.0.1",
    "@holochain/n3h-mock": "^0.0.1",
    "@holochain/n3h-common": "^0.0.1",
    "@holochain/tweetlog": "^0.0.1",
    "sodium-native": "^2.2.3"
  },
  "build": {
    "productName": "n3h",
    "artifactName": "${productName}-${version}.${ext}",
    "linux": {
      "target": "AppImage"
    },
    "appImage": {
      "systemIntegration": "doNotAsk"
    }
  },
  "standard": {
    "env": {
      "mocha": true
    }
  },
  "nyc": {
    "check-coverage": false,
    "per-file": false,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "all": true,
    "include": [
      "./lib/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  }
}
