{
  "name": "@holochain/rrdht",
  "version": "0.0.1",
  "description": "generic modular peer discovery and dht library implementing the rrdht sharding and gossip algorithm",
  "main": "lib/index.js",
  "scripts": {
    "lint": "standard --fix 'lib/**/*.js' 'test/**/*.js'",
    "mocha": "mocha lib/**/*.test.js test/**/*.test.js",
    "nyc": "nyc npm run mocha",
    "test": "npm run lint && npm run nyc",
    "show-coverage": "node -e \"require('opn')('coverage/lcov-report/index.html')\""
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "opn": "^5.4.0",
    "sinon": "^7.1.1",
    "standard": "^12.0.1"
  },
  "dependencies": {
    "@holochain/mosodium": "^0.0.1",
    "@holochain/n3h-common": "^0.0.1"
  },
  "standard": {
    "env": {
      "mocha": true
    }
  },
  "nyc": {
    "check-coverage": true,
    "per-file": false,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "all": true,
    "include": [
      "./lib/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  }
}
