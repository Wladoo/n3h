{
  "name": "n3h-ipc",
  "version": "0.0.1",
  "description": "IPC connector socket abstraction for holochain p2p messaging",
  "main": "lib/index.js",
  "scripts": {
    "lint": "standard --fix 'lib/**/*.js' 'bin/**/*.js'",
    "mocha": "mocha 'lib/**/*.test.js' 'bin/**/*.test.js'",
    "nyc": "nyc npm run mocha",
    "test": "npm run lint && npm run nyc",
    "show-coverage": "node -e \"require('opn')('coverage/lcov-report/index.html')\""
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "opn": "^5.3.0",
    "sinon": "^6.1.4",
    "standard": "^11.0.1"
  },
  "dependencies": {
    "msgpack-lite": "^0.1.26",
    "n3h-common": "^0.0.1",
    "zeromq": "^5.1.0"
  },
  "standard": {
    "env": {
      "mocha": true
    }
  },
  "nyc": {
    "check-coverage": false,
    "per-file": false,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "all": true,
    "include": [
      "./lib/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  },
  "generate-docs": {
    "server": "lib/server.js",
    "client": "lib/client.js"
  }
}
