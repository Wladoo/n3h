{
  "name": "n3h",
  "version": "0.0.1",
  "description": "nodejs implementation of the lib3h p2p protocol",
  "main": "lib/index.js",
  "scripts": {
    "docs": "true",
    "test": "standard --fix '**/*.js' && npm run docs && nyc ./node_modules/mocha/bin/mocha 'lib/**/*.test.js'",
    "coverage": "node -e \"require('opn')('coverage/lcov-report/index.html')\""
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "chai": "^4.1.2",
    "jsdoc-to-markdown": "^4.0.1",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "opn": "^5.3.0",
    "sinon": "^6.1.4",
    "standard": "^11.0.1"
  },
  "dependencies": {
    "msgpack-lite": "^0.1.26",
    "node-p2p-ipc": "github:holochain/node-p2p-ipc#299c8596be4e43cbd1cae1da58e9372e22c19d95",
    "mosocket": "github:neonphog/mosocket#71c3b095f7e1332ceecf9c5489d57c67b95bf1ba"
  },
  "standard": {
    "env": {
      "mocha": true
    }
  },
  "nyc": {
    "check-coverage": true,
    "per-file": false,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "all": true,
    "include": [
      "./lib/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  }
}
