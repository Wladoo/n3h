{
  "name": "pitr",
  "version": "0.0.1",
  "description": "(p)ut (i)t (t)ogether-e(r) - nobody let me name things",
  "main": "lib/index.js",
  "scripts": {
    "lint": "standard --fix 'lib/**/*.js' 'bin/**/*.js'",
    "mocha": "mocha 'lib/**/*.test.js' 'bin/**/*.test.js'",
    "nyc": "nyc npm run mocha || true",
    "test": "npm run lint && npm run nyc",
    "show-coverage": "node -e \"require('opn')('coverage/lcov-report/index.html')\""
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "opn": "^5.3.0",
    "sinon": "^6.1.4",
    "standard": "^11.0.1"
  },
  "dependencies": {
    "hashcache": "file:../hashcache",
    "ipc": "file:../ipc",
    "n3h-common": "file:../n3h-common",
    "test-suite-executor": "file:../test-suite-executor"
  },
  "standard": {
    "env": {
      "mocha": true
    }
  },
  "nyc": {
    "check-coverage": true,
    "per-file": false,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "all": true,
    "include": [
      "./lib/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  }
}
